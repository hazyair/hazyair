{
  "name": "hazyair",
  "version": "1.6.7",
  "description": "Air quality monitoring tool.",
  "main": "hazyair.js",
  "scripts": {
    "postinstall": "cd public && npm install && sudo npm install pm2 -g",
    "installdocs": "sudo npm install jsdoc-to-markdown -g && cd .. && git clone https://github.com/hazyair/hazyair.wiki.git && cd hazyair",
    "generatedocs": "jsdoc2md hazyair.js > ../hazyair.wiki/API.md",
    "plantower": "sudo ./scripts/plantower.sh",
    "nova": "sudo ./scripts/plantower.sh",
    "maxim": "sudo ./scripts/maxim.sh",
    "bosch": "sudo ./scripts/bosch.sh",
    "xiaomi": "./scripts/xiaomi.sh",
    "deploy": "pm2 start server.js && pm2 save && pm2 startup | grep -v PM2 | sh",
    "undeploy": "pm2 stop server && pm2 delete server && pm2 save && pm2 unstartup | grep -v PM2 | sh",
    "start": "pm2 start server.js",
    "stop": "pm2 stop server",
    "restart": "pm2 update && pm2 restart server",
    "reload": "pm2 reload server",
    "delete": "pm2 delete server",
    "show": "pm2 show server",
    "logs": "pm2 logs server",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hazyair/hazyair.git"
  },
